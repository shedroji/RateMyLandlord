<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top blue-grey blue-white-text">
        <div class="container">
            <div class="navbar-header white-text">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RateMyLandlord", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="blue-white-text">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="blue-white-text">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="blue-white-text">@Html.ActionLink("Contact", "Index", "Correspondence")</li>
                    <li class="blue-white-text">@using (@Html.BeginForm("Search", "Property"))
                        {
                            <input type="text" name="query" class="form-control" style="margin-top:.5em;" placeholder="Search"/>
                        }
                    </li>
                    <li class="nav-divider blue-white-text"></li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="navbar-right blue-white-text">@Html.ActionLink("Logout", "Logout", "Account")</li>
                        <li class="navbar-right blue-white-text">@Html.Action("UserNavPartial", "Account")</li>
                    }
                    else
                    {
                        <li class="navbar-right blue-white-text">@Html.ActionLink("Login", "Login", "Account")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RateMyLandlord</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
