
@{
    ViewBag.Title = "Login";
}

@if (ViewBag.Message != string.Empty)
{
    ViewBag.Message = "Success!";
}

<h2>Login</h2>
@Html.ValidationSummary()
@if(TempData["LogoutMessage"] != null)
{
    <div class="alert alert-warning">
        <span class="glyphicon glyphicon-warning-sign"></span>
        @TempData["LogoutMessage"]
    </div>
}
<div class="container text-center">
    <div class="col-lg-12 text-center">
        <div class="text-center">
            <form method="post" action="/Account/Login" class="text-center form-group">
                <div class="row"><label for="username" class="col-md-1">Username: </label><input type="text" class="col-md-9 form-control" name="username"/></div><br/>
                <div class="row"><label for="password" class="col-md-1">Password: </label><input type="password" class="col-md-9 form-control" name="password" /></div><br />
                <div class="row"><label for="rememberMe" class="col-md-2">Remember Me</label><input type="checkbox" class="col-md-1 checkbox" value="true" name="rememberMe" /></div><br />
                <div class="row">
                    <div class="col-md-2">
                    <button type="submit" class="btn btn-default blue-grey white-text form-control" name="login">Login</button>
                </div>
                <div class="col-md-2">
                    <a href="/Account/Create" class="btn btn-default dark-grey-text">Create an Account</a>
                </div>
                <!--<div class="col-md-2">
                     <a href="/Account/signin-google" class="btn btn-default blue-grey white-text form-control">Login with Google</a>
                </div>-->
                </div>
            </form>
        </div>
    </div>
</div>
