<h2>@Html.DisplayFor(model => model.Name)</h2>
<h4>@Html.DisplayFor(model => model.StreetAddress) @Html.DisplayFor(model => model.City) @Html.DisplayFor(model => model.State), @Html.DisplayFor(model => model.ZipCode)</h4>
<hr />
<div class="col-md-9">
    <div class="thumbnail">
        <img class="img-responsive" src="data:image/*;base64,@(Convert.ToBase64String(Model.ImageContent))" height="300" width="400" />
        <div class="caption-full">
            @*<h4 class="pull-right">$24.99</h4>*@
            <h4>
                <a href="#">@Html.DisplayFor(model => model.Name)</a>
            </h4>
            <p>@Html.DisplayFor(model => model.StreetAddress)</p>
            <p>
                @Html.DisplayFor(model => model.City) @Html.DisplayFor(model => model.State), @Html.DisplayFor(model => model.ZipCode)
            </p>
            <h6>@Html.DisplayNameFor(model => model.Description)</h6>
            <p>@Html.DisplayFor(model => model.Description)</p>
            <h6>Utilities Included</h6>
            <p @Html.DisplayFor(model => model.UtilitiesIncluded)></p>
            <p class="rating">
                @string.Format("{0:0.00}", Model.Rating) / 5
            </p>

        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Update", new { id = Model.Id }) |
    @Html.ActionLink("Back to Results", "Index", new { id = Model.Id })
</p>
